{% extends 'base.html.twig' %}

{% block title %}Sponsor Details{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <h5 class="card-header">Sponsor Details</h5>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">{{ sponsor.id }}</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">{{ sponsor.name }}</dd>

                        <dt class="col-sm-4">Website</dt>
                        <dd class="col-sm-8">
                            {% if sponsor.website %}
                                <a href="{{ sponsor.website }}" target="_blank">{{ sponsor.website }}</a>
                            {% else %}
                                N/A
                            {% endif %}
                        </dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ path('app_sponsor_index') }}" class="btn btn-outline-secondary">
                        <i class="bx bx-arrow-back"></i> Back
                    </a>
                    <div>
                        <a href="{{ path('app_sponsor_edit', {'id': sponsor.id}) }}" class="btn btn-outline-warning me-2">
                            <i class="bx bx-edit"></i> Edit
                        </a>
                        <form action="{{ path('app_sponsor_delete', {'id': sponsor.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this sponsor?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sponsor.id) }}">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="bx bx-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

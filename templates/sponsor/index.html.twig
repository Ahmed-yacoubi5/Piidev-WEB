{% extends 'base.html.twig' %}

{% block title %}Sponsor List{% endblock %}

{% block body %}
<div class="container mt-4">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Sponsors /</span> List</h4>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <!--  <a href="{{ path('app_sponsor_new') }}" class="btn btn-primary">+ New Sponsor</a> -->
        </div>
        <div class="card-body">
            {% if sponsors is empty %}
                <p>No sponsors found.</p>
            {% else %}
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Website</th>
                            <th colspan="3" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for sponsor in sponsors %}
                            <tr>
                                <td>{{ sponsor.name }}</td>
                                <td>
                                    <a href="{{ sponsor.website }}" target="_blank">{{ sponsor.website }}</a>
                                </td>
                                <td>
                                    <a href="{{ path('app_sponsor_show', {'id': sponsor.id}) }}" class="btn btn-icon btn-outline-info" title="View">
                                        <i class='bx bx-show'></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('app_sponsor_edit', {'id': sponsor.id}) }}" class="btn btn-icon btn-outline-warning" title="Edit">
                                        <i class='bx bx-edit'></i>
                                    </a>
                                </td>
                                <td>
                                    <form action="{{ path('delete', {'id': sponsor.id}) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this sponsor?');">
                                        <button type="submit" class="btn btn-icon btn-outline-danger" title="Delete">
                                            <i class="bx bx-trash"></i> 
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

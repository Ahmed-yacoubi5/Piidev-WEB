{% extends 'baseBack.html.twig' %}

{% block title %}Edit Absence{% endblock %}

{% block body %}
    <div class="container mt-50 mb-50">
        <div class="card shadow p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0"><i class="fi-rr-calendar-edit mr-2"></i>Modifier l'absence</h2>
                <a href="{{ path('app_absence_index') }}" class="btn btn-sm btn-outline-secondary">
                    <i class="fi-rr-arrow-left"></i> Retour à la liste
                </a>
            </div>

            <div class="mt-3">
                {{ include('absence/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>

            <div class="form-group mt-30">
                {{ include('absence/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
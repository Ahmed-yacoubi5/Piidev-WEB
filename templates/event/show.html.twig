{% extends 'base.html.twig' %}

{% block title %}Event Details{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <h5 class="card-header">Event Details</h5>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">{{ event.title }}</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">{{ event.description ?: 'No description provided.' }}</dd>

                        <dt class="col-sm-4">Start Date</dt>
                        <dd class="col-sm-8">{{ event.startDate|date('Y-m-d H:i') }}</dd>

                        <dt class="col-sm-4">End Date</dt>
                        <dd class="col-sm-8">{{ event.endDate|date('Y-m-d H:i') }}</dd>

                        <dt class="col-sm-4">Location</dt>
                        <dd class="col-sm-8">{{ event.location }}</dd>

                        <dt class="col-sm-4">Capacity</dt>
                        <dd class="col-sm-8">{{ event.capacity ?: 'N/A' }}</dd>

                        <dt class="col-sm-4">Public Event</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-{{ event.isPublic ? 'success' : 'secondary' }}">
                                {{ event.isPublic ? 'Yes' : 'No' }}
                            </span>
                        </dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ path('event_list') }}" class="btn btn-outline-secondary">
                        <i class='bx bx-arrow-back'></i> Back
                    </a>
                    <div>
                        <a href="{{ path('events_edit', { id: event.id }) }}" class="btn btn-outline-warning me-2">
                            <i class="bx bx-edit"></i> Edit
                        </a>
                        <a href="{{ path('app_event_assign_form', { id: event.id }) }}" class="btn btn-outline-primary me-2">
                            <i class="bx bx-link"></i> Assign Sponsors
                        </a>
                        <form action="{{ path('event_delete', { id: event.id }) }}" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this event?');">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="bx bx-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}